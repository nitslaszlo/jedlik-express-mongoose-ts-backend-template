{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    // "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "jest"
    ],
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "**/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}